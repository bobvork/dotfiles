
[core]
    excludesfile = ~/.gitignore

[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path = 

[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true

[user]
    name = Bob Vork
    email = vorkbob@gmail.com

[push]
    default = simple

    
[color "status"]

    added = yellow
    changed = green
    untracked = cyan